{
  "name": "comit-sdk",
  "version": "0.4.1",
  "description": "An SDK for developing COMIT applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:comit-network/comit-js-sdk.git",
  "author": "CoBloX developers <team@coblox.tech>",
  "scripts": {
    "check": "tsc --noEmit && tslint -p . && prettier --check '**/*.{ts,js,json,yml}'",
    "rebuild": "rimraf dist/ && tsc",
    "postinstall": "mkdir -p ./gen && json2ts -i ./siren.schema.json -o ./gen/siren.d.ts && prettier --write ./gen/siren.d.ts",
    "fix": "tslint -p . --fix && prettier --write '**/*.{ts,js,json,yml}'",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bcoin": "https://github.com/bcoin-org/bcoin#2496acc7a98a43f00a7b5728eb256877c1bbf001",
    "bitcoin-core": "^2.2.0",
    "content-type": "^1.0.4",
    "ethers": "^4.0.38",
    "urijs": "^1.19.1"
  },
  "devDependencies": {
    "@types/content-type": "^1.1.3",
    "@types/jest": "^24.0.18",
    "@types/nock": "^11.1.0",
    "@types/urijs": "^1.19.3",
    "jest": "^24.9.0",
    "json-schema-to-typescript": "^7.1.0",
    "nock": "^11.3.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  }
}
